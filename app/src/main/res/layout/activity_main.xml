<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout android:layout_height="match_parent"

    android:layout_width="match_parent"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:background="@drawable/back"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="60dp"
        android:layout_width="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="Surveillance Camera"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <ImageView
        android:layout_height="192dp"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="99dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="99dp"
        android:id="@+id/imageView3"
        android:src="@drawable/cam"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/lgemail"
        android:textColor="#ffffff"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/imageView3"
        android:ems="10"
        android:hint="@string/hint"
        android:textColorHint="#ffffff"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/lgpass"
        android:textColor="#ffffff"
        android:inputType="textPassword"
        android:layout_below="@+id/lgemail"
        android:ems="10"
        android:hint="Enter Password"
        android:textColorHint="#ffffff"/>


    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:text="Login"
        android:layout_marginRight="130dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="130dp"
        android:id="@+id/login"
        android:gravity="center_horizontal"
        android:layout_below="@+id/lgpass"
        app:strokeColor="#9c27b0"
        app:backgroundTint="#00bcd4"/>

    <TextView
        android:layout_height="32dp"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:text="Forgot Password ?"
        android:layout_marginRight="239dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/fgpass"
        android:textColor="#ffffff"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/lgpass"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:text="Register for new user"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/newuser"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_below="@+id/login"/>

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="622dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="No of attempts remaining:  "
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:textSize="18dp" />


</RelativeLayout>