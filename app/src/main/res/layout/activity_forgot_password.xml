<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent" android:background="@drawable/back" xmlns:aapt="http://schemas.android.com/aapt" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:text="Forgot Password" android:layout_marginRight="10dp" android:layout_marginTop="44dp" android:layout_marginLeft="10dp" android:id="@+id/textView5" android:gravity="center" android:textColor="#ffffff" android:textSize="35dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:layout_marginRight="42dp" android:layout_marginTop="237dp" android:layout_marginLeft="42dp" android:id="@+id/forgotemail" android:textColor="#ffffff" android:inputType="textEmailAddress" android:ems="10" android:hint="Enter Email ID" android:textColorHint="#ffffff"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:text="Reset Password" android:layout_marginRight="130dp" android:layout_marginTop="318dp" android:layout_marginLeft="130dp" android:id="@+id/forgot" app:backgroundTint="#03a9f4"/>

    <ProgressBar android:layout_height="30dp" android:layout_width="30dp" android:id="@+id/progressBar" android:layout_marginBottom="20dp" android:visibility="gone" android:layout_gravity="bottom|center_vertical|center_horizontal|center"/>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="160dp"
        />

</RelativeLayout>